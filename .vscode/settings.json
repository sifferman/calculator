{
    // Auto Formatting
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // General
    "files.associations": {
        "*.xci": "xml",
        "*.core": "yaml"
    },

    // mshr-h.veriloghdl
    "verilog.linting.linter": "verilator",
    "verilog.linting.verilator.arguments": "-f rtl/rtl.f -f dv/dv.f -Wall -Wno-MODDUP --timing",
    "verilog.linting.verilator.runAtFileLocation": false
}
